{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_PATH=src react-scripts start",
    "build": "cross-env NODE_PATH=src react-scripts build",
    "rebuild": "npm run clean && npm install && npm run build",
    "lint-css": "stylelint \"src/**/*.{js,jsx}\"",
    "lint-js": "eslint --ext .js --ext .jsx src",
    "lint": "npm-run-all lint-js lint-css",
    "test": "react-scripts test --modulePaths=src",
    "test:coverage": "react-scripts test --coverage --modulePaths=src",
    "validate": "npm-run-all lint test",
    "eject": "react-scripts eject",
    "clean": "rm -rf node_modules",
    "reinstall": "npm run clean && npm install",
    "analyze:ci": "source-map-explorer --html 'build/static/js/*.js' > source-map-result.html",
    "analyze": "source-map-explorer 'build/static/js/*.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "antd": "^3.16.1",
    "connected-react-router": "6.3.2",
    "cross-env": "5.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "6.0.1",
    "react-router-dom": "5.0.0",
    "react-scripts": "2.1.8",
    "redux": "4.0.1",
    "redux-actions": "^2.6.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "redux-thunk": "2.3.0",
    "reselect": "^4.0.0",
    "styled-components": "4.2.0"
  },
  "devDependencies": {
    "@borealisgroup/eslint-config": "^1.4.0",
    "@borealisgroup/stylelint-config": "^1.2.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "source-map-explorer": "^1.8.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
